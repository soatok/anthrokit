{
  "name": "soatok/anthrokit",
  "description": "Common Components for Web Development",
  "keywords": ["registry"],
  "homepage": "http://github.com/soatok/anthrokit",
  "license": "ISC",
  "authors": [
    {
      "name": "Soatok Dreamseeker",
      "email": "soatok.dhole@gmail.com",
      "homepage": "https://soatok.com"
    }
  ],
  "require": {
    "php": "^7.3",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-sodium": "*",
    "monolog/monolog": "^1.17",
    "paragonie/certainty": "^1|^2",
    "paragonie/corner": "^1|^2",
    "paragonie/csp-builder": "^2",
    "paragonie/easydb": "^2",
    "paragonie/ionizer": "^0|^1",
    "paragonie/stern": "^0|^1",
    "slim/slim": "^3",
    "soatok/dhole-cryptography": "^1",
    "twig/markdown-extra": "^3",
    "twig/twig": "^3"
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "vimeo/psalm": "^3"
  },
  "autoload": {
    "psr-4": {
      "Soatok\\AnthroKit\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Soatok\\AnthroKit\\Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public",
    "test": "phpunit"
  }
}
